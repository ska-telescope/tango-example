{
    "version": "0.4.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 12345
            },
            "justMyCode": false,
            "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}", 
                  "remoteRoot": "/app" 
                }
              ]
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": ["01", "-ORBendPoint", "giop:tcp::10000"],
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["--headful","--capture=no"]

        }
    ]
}