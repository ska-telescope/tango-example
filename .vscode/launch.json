{
    "version": "0.4.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 12345
            },
            "justMyCode": false,
            "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}", 
                  "remoteRoot": "/app" 
                }
              ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": false,
            "args": ["--headful","--capture=no"]
        }
    ]
}